<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.diskLabel, .diskName, .diskSize {
		 	color: #3A5F7C;
    		font-family: Arial,sans-serif;
    		font-size: 15px;
    		font-weight: bold;
		}
	
		.diskName {
			float:left;
			
		}
		.diskSize {
			float:right;
			padding-right: 100px;
		}
		
		.diskRow {
			float: left;
			width: 100%;
			padding-left: 70px;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.diskRow}">
		<g:Label ui:field="diskName" addStyleNames="{style.diskName}" />
		<g:Label ui:field="diskSize" addStyleNames="{style.diskSize}" />
	</g:FlowPanel>

</ui:UiBinder>
