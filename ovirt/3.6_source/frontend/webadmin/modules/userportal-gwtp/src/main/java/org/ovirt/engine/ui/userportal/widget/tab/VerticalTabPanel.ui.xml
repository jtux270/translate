<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.bar {
			height: 100%;
			padding: 15px 0;
		}
		
		@external obrand_content;
		.obrand_content {
			overflow: hidden;
			padding: 5px;
			border-radius: 3px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX">
		<g:west size="150">
			<g:FlowPanel ui:field="tabContainer" addStyleNames="{style.bar}" />
		</g:west>
		<g:center>
			<g:LayoutPanel>
				<g:layer left="0px" right="10px" top="0px" bottom="40px">
					<g:SimpleLayoutPanel addStyleNames="{style.obrand_content}" ui:field="tabContentContainer"/>
				</g:layer>
			</g:LayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
