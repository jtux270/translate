<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
  xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
  xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic"
	xmlns:w="urn:import:org.ovirt.engine.ui.common.widget">

	<ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.cluster.ManageGlusterSwiftPopupView.WidgetStyle">
		.generalTabTopDecorator {
			background-color: #D3D3D3;
			margin-bottom: 8px;
			margin-top: 4px;
			margin-right: 3px;
			padding-top: 6px;
			padding-bottom: 6px;
			width: 100%;
		}

		.swiftStatus {
			width: 300px;
		}

		.swiftStatusWidget {
			width: 120px;
		}

		.swiftStatusWidget input {
			background: transparent;
			font-weight: bold;
		}

		.tablePanel {
			height: 360px;
			border: 1px solid #CED8DF;
		}

		.messageLabel {
			color: #FF0000;
			left: 10px;
			padding-top: 5px;
			padding-left: 5px;
		}
	</ui:style>

	<d:SimpleDialogPanel width="800px" height="550px">
		<d:content>
			<g:VerticalPanel>
				<g:HorizontalPanel addStyleNames="{style.generalTabTopDecorator}">
					<ge:EntityModelLabelEditor addStyleNames="{style.swiftStatus}" ui:field="swiftStatusEditor"/>
					<ge:EntityModelRadioButtonEditor ui:field="startSwift"/>
					<ge:EntityModelRadioButtonEditor ui:field="stopSwift"/>
					<ge:EntityModelRadioButtonEditor ui:field="restartSwift"/>
				</g:HorizontalPanel>
				<ge:EntityModelCheckBoxEditor ui:field="manageSwiftServerLevel"/>
				<g:ScrollPanel addStyleNames="{style.tablePanel}">
					<e:EntityModelCellTable ui:field="hostServicesTable"/>
				</g:ScrollPanel>
				<g:Label ui:field="messageLabel" addStyleNames="{style.messageLabel}" />
			</g:VerticalPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>