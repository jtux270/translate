<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:org.ovirt.engine.ui.common.widget.label">

    <ui:style type="org.ovirt.engine.ui.common.widget.editor.GroupedListModelListBox.Style">
        .container {
            height: 100%;
            border: solid 1px gray;
            padding: 0px;
        }

        .container_legacy {
            margin-bottom: 10px;
        }

        .labelContainer_legacy {
            text-align: left;
            border: none;
        }

        .labelContainer {
            border: none;
            border-top: solid 1px gray;
            font-style: italic;
        }

        .listBoxPatternfly {
            height: 21px;
        }

        .listBox {
            width: 100%;
            border: none;
        }

        .label {
            margin: 0px;
        }
    </ui:style>

    <g:FlowPanel ui:field="container">
        <g:FlowPanel ui:field="groupLabelContainer" addStyleNames="input-group-addon {style.labelContainer_legacy}">
            <l:EnableableFormLabel ui:field="groupLabel" addStyleNames="{style.label}"/>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>

