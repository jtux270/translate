<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:onu="urn:import:org.ovirt.engine.ui.common.view.popup.numa">

    <ui:with field="resources" type="org.ovirt.engine.ui.common.CommonApplicationResources" />

    <ui:style>
        .imageStyle {
            float: left;
            padding-left: 5px;
        }

        .vmStatusIcon {
            margin-top: 4px;
        }

        .clearFloat {
            clear: both;
        }
    </ui:style>

    <g:FlowPanel ui:field="container">
        <g:Image ui:field="virtualNodeStatus" resource="{resources.downImage}" addStyleNames="{style.imageStyle} {style.vmStatusIcon}" />
        <g:Image ui:field="numaState" resource="{resources.vNumaIcon}" addStyleNames="{style.imageStyle}" />
        <g:Label ui:field="virtualNodeName" addStyleNames="{style.imageStyle}" />
        <g:SimplePanel addStyleNames="{style.clearFloat}" />
    </g:FlowPanel>

</ui:UiBinder>
