<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type="org.ovirt.engine.ui.common.widget.AbstractValidatedWidgetWithLabel.Style">
        .wrapper {
            line-height: 30px;
            text-align: left;
        }

        .label {
            font-size: 13px;
            padding: 0 5px;
            font-family: Arial, sans-serif;
            line-height: 30px;
        }

        .labelEnabled {
            color: #333333;
        }

        .labelEnabledPatternFly {
            color: #fff;
        }
        .labelDisabled {
            color: gray;
        }

        .labelHidden {
            display: none;
        }

        .contentWidget {
            float: right;
            width: 238px;
            padding: 0 5px;
            line-height: 30px;
        }
    </ui:style>

    <g:HTMLPanel ui:field="wrapperPanel" addStyleNames="{style.wrapper} avw_wrapper_pfly_fix">
        <label ui:field="labelElement" class="{style.label} {style.labelEnabled} avw_label_pfly_fix" />
        <g:SimplePanel ui:field="contentWidgetContainer" addStyleNames="{style.contentWidget} avw_contentWidget_pfly_fix" />
        <div style="clear: both;" />
    </g:HTMLPanel>

</ui:UiBinder>
