<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='resources' type='org.ovirt.engine.ui.common.CommonApplicationResources' />

    <ui:style>
        .refreshButton {
            float: right;
            font-size: 12px;
            height: 14px;
            line-height: 14px;
            width: 12px;
            padding-right: 5px;
            padding: 2px;
            background: transparent;
            border: 1px solid transparent;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:FlowPanel ui:field="actionPanel" />
        <g:PushButton ui:field="refreshButton" addStyleNames="{style.refreshButton} sap_refreshButton_pfly_fix">
            <g:upFace image='{resources.refreshButtonImage}' />
        </g:PushButton>
        <div style="clear: both;" />
    </g:HTMLPanel>

</ui:UiBinder>
