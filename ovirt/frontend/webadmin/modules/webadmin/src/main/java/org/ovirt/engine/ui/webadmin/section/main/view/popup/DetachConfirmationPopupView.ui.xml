<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
	xmlns:ge="urn:import:org.ovirt.engine.ui.common.widget.editor.generic">

	<ui:style>
		.items {
			margin-top: 20px;
			line-height: 20px;
		}
		
	</ui:style>

	<d:SimpleDialogPanel width="500px" height="400px">
		<d:content>
			<g:DockLayoutPanel>
				<g:north size="150">
					<g:VerticalPanel>
						<g:Label ui:field="message" />
						<g:HorizontalPanel ui:field="itemPanel"	addStyleNames="{style.items}">
							<g:Label text="- " />
							<ge:StringEntityModelLabelEditor ui:field="item" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:north>
				<g:south size="80">
					<g:VerticalPanel>
						<g:HTML ui:field="info" />
						<ge:EntityModelCheckBoxEditor ui:field="commitChanges" />
					</g:VerticalPanel>
				</g:south>
			</g:DockLayoutPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
