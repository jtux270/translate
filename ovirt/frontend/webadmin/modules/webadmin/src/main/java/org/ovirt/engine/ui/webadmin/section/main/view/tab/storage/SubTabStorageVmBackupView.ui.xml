<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:com.google.gwt.editor.ui.client"
	xmlns:f="urn:import:org.ovirt.engine.ui.webadmin.widget.form">

	<ui:style>
		.mainContainer {
		}

		.vmTableContainer {
			position: absolute;
			padding-right: 10px;
			padding-left: 10px;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 30%;
		}

		.applicationsTableContainer {
			position: absolute;
			padding-left: 10px;
			top: 34px;
			bottom: 0px;
			left: 70%;
			right: 0px;
			overflow: auto;
		}
	</ui:style>

	<g:HorizontalPanel ui:field="mainContainer"
		addStyleNames="{style.mainContainer}">
		<g:SimplePanel ui:field="vmTableContainer"
			addStyleNames="{style.vmTableContainer}"></g:SimplePanel>
		<g:SimplePanel ui:field="applicationsTableContainer"
			addStyleNames="{style.applicationsTableContainer}"></g:SimplePanel>
	</g:HorizontalPanel>

</ui:UiBinder>
	