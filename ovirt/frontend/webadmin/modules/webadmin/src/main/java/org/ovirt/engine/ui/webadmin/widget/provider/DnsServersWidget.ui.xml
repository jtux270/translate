<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants' />

	<ui:style type="org.ovirt.engine.ui.common.widget.AddRemoveRowWidget.WidgetStyle">
		.mainPanel {
			height: 100%;
			width: 100%;
		}

		.buttonStyle {
			margin-right: 7px;
			width: 9px;
			height: 10px;
			padding-left: 2px;
			padding-top: 2px;
			margin-top: 16px;
			margin-left: 20px;
		}

		.labelStyle {
			margin-top: 5px;
			margin-left: 5px;
			font-weight: bold;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.mainPanel}" >
		<g:Label text="{constants.dnsServersExternalSubnet}" addStyleNames="{style.labelStyle}" />
		<g:ScrollPanel ui:field="scrollPanel">
			<g:FlowPanel ui:field="contentPanel" />
		</g:ScrollPanel>
	</g:FlowPanel>

</ui:UiBinder>
